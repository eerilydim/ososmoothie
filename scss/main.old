/* Global styles */

html {
	position: relative;
	min-height: 100%
}

body {
	margin: 0;
}

.centred {
	text-align: center;
}
/* Navigation styles */

nav {
	background-color: #292c2f;
	position: fixed;
	width: 100%;
	height: 3.3rem;
}

nav .button {
	background-color: #292c2f;
	margin-bottom: 0;
	&:hover, &:focus {
		background-color: #669933;
	}
}
/* Header styles */

header.hero {
	padding: 3.3rem 0 0;
	background-image: url('../images/oso.jpg');
	background-size: cover;
	height: 50vh;
	overflow: hidden;
}
/* Footer styles */

.footer {
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	overflow: hidden;
	background-color: #292c2f;
	text-align: center;
	font-size: 1.2rem;
	padding: 2rem;
	p {
		&.slogan {
			color: #8d9093;
			font-size: 1.8rem;
			margin: 0 0 1rem;
		}
		&.copywrite {
			color: #8f9296;
			font-size: 0.875rem;
			margin: 0;
		}
	}
	.links a {
		list-style: none;
		font-weight: bold;
		color: #ffffff;
		padding: 3rem 0 2rem;
		margin: 0;
		&::after {
			content: "â€¢";
			padding: 0 0.4rem 0 0.8rem;
		}
		&:last-child::after {
			content: "";
			padding: 0 0.4rem 0 0.8rem;
		}
	}
}